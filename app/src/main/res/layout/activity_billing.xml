<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/basicLayoutStyle"
    tools:context="com.maratabumalik.ramadancheatsheet.com.maratabumalik.proramadan.BillingActivity"
    android:id="@+id/activity_billing">

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/selectSum"
        android:text="@string/select_sum"
        style="@style/infoTextStyle" />
    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <ListView
        android:layout_gravity="center"
        android:id="@+id/billSums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>
