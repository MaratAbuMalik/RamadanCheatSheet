<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@style/WindowsAnimationTransition</item>
    </style>

    <!-- Light base activity theme -->
    <style name="ThemeLight" parent="AppTheme">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Dark base activity theme -->
    <style name="ThemeDark" parent="AppTheme">
        <item name="android:textColor">@color/colorTextNight</item>
        <item name="android:colorBackground">@color/colorBackgroundNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
    </style>

    <style name="basicTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="headStyle" parent="basicTextStyle">
        <item name="android:text">@string/empty</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="longTextStyle" parent="basicTextStyle">
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">@dimen/long_text_size</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="infoTextStyle" parent="basicTextStyle">
        <item name="android:text">@string/empty</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/info_text_size</item>
    </style>

    <style name="basicLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ScrollLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="WindowsAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
